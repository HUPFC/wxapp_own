/**index.wxss**/
.top{
  width: 100%;
  background-color: #ffffffcc;
  border: #efefef 1px solid; 
}

.top .title{
  width: 33%;
  text-align: center;
  vertical-align:middle;
  line-height: 100rpx;
  background-color: #efefef;
}
.main{
  margin-top: 15rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.start_picker{
  margin-top: 20rpx;
}

.start_picker .input_picker{
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1px #efefef solid;
}

.row{
  margin-top: 45rpx;
}

.row_forward{
  display: flex;
  flex-direction:row;
}

.forward_day{
  width: 150rpx;
  border: 1px #efefef solid;
}

.checkbox_pre{
  display: flex;
  border: 1px #efefef sold;
}

.checkbox_pre view{
  text-align: center;
  width: 30px;

}

.checkbox_pre view.on{
  background-color: rgb(47, 255, 175);
}

